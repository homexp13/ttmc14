<ui:MCBeaconChooseWindow
    xmlns="https://spacestation14.io"
    xmlns:ui="clr-namespace:Content.Client._MC.Beacon.UI"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
    Title="Beacon choice"
    MinSize="300 300">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" Margin="8">
        <RichTextLabel Text="Select the beacon" Margin="0 0 16 0" />

        <cc:HSeparator Margin="0 4" />

        <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
            <BoxContainer Orientation="Vertical" Name="Container" HorizontalExpand="True" VerticalExpand="True" />
        </ScrollContainer>

        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Align="Center">
                <Button Text="Cancel" Name="CancelButton" />
            </BoxContainer>

            <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Align="Center">
                <Button Text="Submit" Name="SubmitButton" Disabled="True" />
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
</ui:MCBeaconChooseWindow>
