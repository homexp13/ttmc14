<ui1:MCCommunicationsConsoleWindow xmlns="https://spacestation14.io"
                                   xmlns:ui1="clr-namespace:Content.Client._MC.CommunicationsConsole.UI"
                                   xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                                   MinSize="400 200"
                                   MaxSize="400 960"
                                   Title="{Loc communications-console-title}">

    <BoxContainer Orientation="Vertical"
                  HorizontalExpand="True"
                  VerticalExpand="True"
                  SeparationOverride="15"
                  Margin="15">

        <!-- Заголовок -->
        <BoxContainer Orientation="Vertical"
                     HorizontalExpand="True"
                     VerticalAlignment="Center"
                     Margin="0 0 0 10">
            <Label Text="{Loc communications-console-tittle-text}"
                   HorizontalAlignment="Center"
                   Modulate="#E0E0E0"/>
            <Label Text="{Loc communications-console-choose-option}"
                   HorizontalAlignment="Center"
                   Modulate="#8FA8C8"
                   Margin="0 5 0 0"/>
        </BoxContainer>

        <!-- Основные кнопки -->
        <BoxContainer Orientation="Vertical"
                     HorizontalExpand="True"
                     VerticalAlignment="Center"
                     SeparationOverride="10"
                     Margin="0 20 0 0">

            <controls:ConfirmButton Name="ERTCallButton"
                                   Text="{Loc communications-console-button-ERTCall}"
                                   Access="Public"
                                   HorizontalAlignment="Center"
                                   MinWidth="220"
                                   MinHeight="35"/>
        </BoxContainer>

        <!-- Статус -->
        <BoxContainer Orientation="Horizontal"
                     HorizontalExpand="True"
                     Margin="0 20 0 0">
            <Label Text="{Loc communications-console-status-text}"
                   Modulate="#A0A0A0"
                   MinWidth="50"/>
            <Label Name="StatusLabel"
                   Text="{Loc communications-console-status}"
                   Modulate="#7CFC00"
                   HorizontalExpand="True"/>
        </BoxContainer>

    </BoxContainer>
</ui1:MCCommunicationsConsoleWindow>
